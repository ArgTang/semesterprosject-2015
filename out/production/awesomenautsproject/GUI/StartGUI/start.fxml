<?xml version="1.0" encoding="UTF-8"?>

<!-- In this window will be able to pick witch role you want. Agent, Adm or Customer -->

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>

<?import javafx.scene.layout.VBox?>
<GridPane fx:controller="GUI.StartGUI.StartController" xmlns:fx="http://javafx.com/fxml">
    <columnConstraints>

    </columnConstraints>
    <children>
        <VBox>
            <Text text="Welcome, please log in:" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
            <!-- Login or register-->
            <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <HBox alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <Button text="Sign In" onAction="#login"/>
                <Button text="Register" onAction="#register"/>
            </HBox>

        </VBox>
    </children>
    <stylesheets>
        <URL value="@css/JMetroLightTheme.css" />
        <URL value="@css/login.css" />
    </stylesheets>
 </GridPane>